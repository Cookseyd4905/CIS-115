// This program takes a number of seconds and displays how many
// minutes, hours, and days it equals.
package c4a3_timecalculator_dustincooksey;
import java.util.Scanner;
public class C4A3_TimeCalculator_DustinCooksey 
{

   
    public static void main(String[] args) 
    {
        displayInfo();
        int minutes = 0;
        int hours = 0;
        int days = 0;
        Scanner k = new Scanner(System.in);
        System.out.print("Please enter the amount of seconds: ");
        int sec = k.nextInt();
     
        if (sec >= 60 && sec < 3600)
            minutes = (sec / 60);
           System.out.println("The amount of seconds you "
           + "entered equeals " + minutes +" minutes");  
        
    }
    public static void displayInfo()
    {
        System.out.println("Dustin Cooksey");
        System.out.println("CIS-115-1001");
    }
}
